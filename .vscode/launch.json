{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch LIF Node",
      "type": "node", 
      "request": "launch",
      "program": "${workspaceFolder}/scripts/lif_node.js",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch Node.js Program",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch Current File",
      "type": "node",
      "request": "launch", 
      "program": "${file}",
      "args": [],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
